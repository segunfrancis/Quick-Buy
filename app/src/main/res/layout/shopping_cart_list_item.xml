<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/shopping_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_item_price_text"
        app:layout_constraintEnd_toStartOf="@+id/shopping_item_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shopping_item_name_text"
        app:srcCompat="@drawable/ic_cancel" />

    <TextView
        android:id="@+id/shopping_item_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/shopping_item_remove_button"
        app:layout_constraintStart_toEndOf="@+id/shopping_item_delete_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Adidas Adizero 2" />

    <TextView
        android:id="@+id/shopping_item_price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shopping_item_remove_button"
        app:layout_constraintStart_toEndOf="@+id/shopping_item_delete_button"
        app:layout_constraintTop_toBottomOf="@+id/shopping_item_name_text"
        tools:text="$12,000" />

    <ImageButton
        android:id="@+id/shopping_item_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_item_quantity_text"
        app:layout_constraintEnd_toStartOf="@+id/shopping_item_quantity_text"
        app:layout_constraintStart_toEndOf="@+id/shopping_item_name_text"
        app:layout_constraintTop_toTopOf="@+id/shopping_item_quantity_text"
        app:srcCompat="@drawable/ic_remove" />

    <TextView
        android:id="@+id/shopping_item_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_item_add_button"
        app:layout_constraintEnd_toStartOf="@+id/shopping_item_add_button"
        app:layout_constraintStart_toEndOf="@+id/shopping_item_remove_button"
        app:layout_constraintTop_toTopOf="@+id/shopping_item_add_button"
        tools:text="11" />

    <ImageButton
        android:id="@+id/shopping_item_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_item_price_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shopping_item_quantity_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add" />
</androidx.constraintlayout.widget.ConstraintLayout>